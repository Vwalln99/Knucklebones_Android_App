                android:layout_marginBottom="1dp"/>
            <ImageView
                android:id="@+id/playerBoard_04"
                android:layout_width="64dp"
                android:layout_height="60dp"
                android:layout_gravity="fill"
                android:background="@color/maincoloroverlay"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"/>
            <ImageView
                android:id="@+id/playerBoard_05"
                android:layout_width="64dp"
                android:layout_height="60dp"
                android:layout_gravity="fill"
                android:background="@color/maincoloroverlay"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"/>
            <ImageView
                android:id="@+id/playerBoard_06"
                android:layout_width="64dp"
                android:layout_height="60dp"
                android:layout_gravity="fill"
                android:background="@color/maincoloroverlay"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"/>
            <ImageView
                android:id="@+id/playerBoard_07"
                android:layout_width="64dp"
                android:layout_height="60dp"
                android:layout_gravity="fill"
                android:background="@color/maincoloroverlay"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"/>
            <ImageView
                android:id="@+id/playerBoard_08"
                android:layout_width="64dp"
                android:layout_height="60dp"
                android:layout_gravity="fill"
                android:background="@color/maincoloroverlay"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"/>
        </GridLayout>
    </FrameLayout>
    <ImageButton
        android:id="@+id/backToMenu"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/arrow_back"
        android:layout_gravity="center"
        android:contentDescription="@string/back_to_main" />
</LinearLayout>